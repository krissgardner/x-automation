{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": [
      "dom",
      "ES2022"
    ],
    "moduleResolution": "node16",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}